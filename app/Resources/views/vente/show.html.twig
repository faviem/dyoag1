                               <time class="meta" datetime="2015">June 16, 2014 at 6:00PM</time><a class="rating pull-right" href="#"><span class="fa-star"></span><span class="fa-star"></span><span class="fa-star"></span><span class="fa-star"></span><span class="fa-star-o"></span></a>
                               <p class="big txt-gray-light">
                                 Lorem ipsum dolor sit amet, consectetur adipisicing elit. Dolores, eveniet, eligendi et nobis neque minus mollitia sit repudiandae ad repellendus recusandae blanditiis praesentium

                               </p>
                             </div>
                           </blockquote><a class="btn btn-primary round-xl btn-sm offset-5" href="#">Add a review</a>
                         </div>
                        #}
                    </div>
                </div>
            </div>
        </div>
    </section>
    {% if relativeVentes|length > 1 %}
        <section class="text-center well well-sm">
            <!--Item slider text-->
            <div class="container">
                <div class="row">
                    <div class="col-md-9">
                        <h5 class="text-dark-variant-4 text-left">Autres offres relatives à ce produit</h5>
                    </div>
                    <div class="col-md-3">
                        <!-- Controls -->
                        <div class="controls pull-right hidden-xs">
                            <a class="left fa fa-chevron-left btn btn-default" href="#itemslider"data-slide="prev"></a>
                            <a class="right fa fa-chevron-right btn btn-default" href="#itemslider" data-slide="next"></a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Item slider-->
            <div class="container">

                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12">
                        <div class="carousel carousel-showmanymoveone slide" id="itemslider">
                            <div class="carousel-inner">
                                {% set break = false %}
                                {% for relativeVente in relativeVentes %}
                                    {% if loop.first %}
                                        <div class="item active product tumbnail">
                                            <div class="col-xs-12 col-sm-6 col-md-2">
                                                <a href="{{ path('vente_show', { 'id': relativeVente.id }) }}">
                                                    <img class="img-responsive center-block img-circle img-sm" alt="" src="{{ asset(product_images ~'/'~ relativeVente.imageName)|imagine_filter('my_thumb') }}">
                                                </a>
                                                <h4 class="text-center"><a href="{{ path('vente_show', { 'id': relativeVente.id }) }}">{{ relativeVente.product.name }}</a></h4>
                                                <h5 class="text-center"><span class="price sale">{{ relativeVente.prixUnit }} FCFA / {{ relativeVente.measure }}</span></h5>
                                            </div>
                                        </div>
                                    {% else %}
                                        <div class="item product tumbnail">
                                            <div class="col-xs-12 col-sm-6 col-md-2">
                                                <a href="{{ path('vente_show', { 'id': relativeVente.id }) }}">
                                                    <img class="img-responsive center-block img-circle img-sm" alt="" src="{{ asset(product_images ~'/'~ relativeVente.imageName)|imagine_filter('my_thumb') }}">
                                                </a>
                                                <h4 class="text-center"><a href="{{ path('vente_show', { 'id': relativeVente.id }) }}">{{ relativeVente.product.name }}</a></h4>
                                                <h5 class="text-center"><span class="price sale">{{ relativeVente.prixUnit }} FCFA / {{ relativeVente.measure }}</span></h5>
                                            </div>
                                        </div>
                                    {% endif %}
                                {% endfor %}

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </section>
    {% endif %}
    <!-- Item slider end-->
    <div id="order-dialog" class="modal fade" tabindex="-1"  role="dialog" aria-labelledby="order-dialogLabel">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h3 class="modal-title speedwapp-bold" id="order-dialogLabel">
                        {{ 'Remplissez le formulaire pour commander'|trans }}
                    </h3>
                </div>
                <!-- dialog body -->
                <div class="modal-body">
                    {{ form_start(form, {'method': 'POST', 'action': path('market_index')}) }}
                    {{ form_widget(form) }}
                    <input type="submit" value="Create" />
                    {{ form_end(form) }}
                    {#
                    <form id="" action="{{ path('speedwapp_ws_add_user_skill') }}" {{ form_enctype(skills_form) }} method="POST" >
                    {{ form_widget(skills_form) }}
                    {{ form_errors(skills_form) }}
                    {{ form_rest(skills_form) }}
                    </form>
                    #}
                </div>

            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        require(['ventes/show']);
    </script>
{% endblock %}