{% extends 'dashboard/moncompte/index.html.twig' %}

{% block  moncompte %}

    <h1>Modification de mon compte</h1>

    {{ form_start(form) }}
        <fieldset>
            <legend>{{ "registration.legend.1" | trans({}, 'FOSUserBundle') }}</legend>

            {#{{ form_errors(form) }}   #}
            
                <div class="form-group col-sm-3">
                    {{ form_label(form.username, label|default("Nom d'utilisateur"|trans), { 'label_attr': { 'class': '' } }) }}
                </div>
                <div class="form-group col-sm-9">
                    {{ form_widget(form.username, {'attr' : {'class' : 'form-control', 'placeholder' : 'registration.name'|trans, 'readonly' : 'readonly'}}) }}
                    {{ form_errors(form.username) }}
                </div>
                <div class="form-group col-sm-3">
                    {{ form_label(form.email, label|default('Email'|trans), { 'label_attr': { 'class': '' } }) }}
                </div>
                <div class="form-group col-sm-9">
                    {{ form_widget(form.email, {'attr' : {'class' : 'form-control', 'placeholder' : 'registration.form_email'|trans, 'readonly' : 'readonly'}}) }}
                    {{ form_errors(form.email) }}
                </div>
                 <div class="form-group col-sm-3">
                    {{ form_label(form.current_password, label|default('Mot de passe actuel'|trans), { 'label_attr': { 'class': '' } }) }}
                </div>
                 <div class="form-group col-sm-9">
                    {{ form_widget(form.current_password, {'attr' : {'class' : 'form-control', 'placeholder' : 'Mot de passe actuel'|trans}}) }}
                    {{ form_errors(form.current_password) }}
                </div>
            {#    
                 <div class="form-group col-sm-3">
                    {{ form_label(form.plainPassword.plainPassword.first, label|default('Nouveau mot de passe'|trans), { 'label_attr': { 'class': '' } }) }}
                </div>          
                <div class="form-group col-sm-9">
                    {{ form_widget(form.plainPassword.plainPassword.first, {'attr' : {'class' : 'form-control', 'placeholder' : 'Nouveau mot de passe'|trans}}) }}
                    {{ form_errors(form.plainPassword.plainPassword.first) }}
                </div>
                 <div class="form-group col-sm-3">
                    {{ form_label(form.plainPassword.plainPassword.second, label|default('Confirmation nouveau mot de passe'|trans), { 'label_attr': { 'class': '' } }) }}
                </div>
                <div class="form-group col-sm-9">
                    {{ form_widget(form.plainPassword.plainPassword.second, {'attr' : {'class' : 'form-control', 'placeholder' : 'Confirmation nouveau mot de passe'|trans}}) }}
                    {{ form_errors(form.plainPassword.plainPassword.second) }}
                </div>
            
#}
            <legend>{{ "registration.legend.2" | trans({}, 'FOSUserBundle') }}</legend>
                 <div class="form-group col-sm-3">
                    {{ form_label(form.firstname, label|default('registration.firstname'|trans), { 'label_attr': { 'class': '' } }) }}
                </div>  
                <div class="form-group col-sm-9">
                    {{ form_widget(form.firstname, {'attr' : {'class' : 'form-control' , 'placeholder' : 'registration.firstname'|trans}}) }}
                    {{ form_errors(form.firstname) }}
                </div>
                <div class="form-group col-sm-3">
                    {{ form_label(form.firstname, label|default('registration.lastname'|trans), { 'label_attr': { 'class': '' } }) }}
                </div>  
                <div class="form-group col-sm-9">
                    {{ form_widget(form.lastname, {'attr' : {'class' : 'form-control', 'placeholder' : 'registration.lastname'|trans}}) }}
                    {{ form_errors(form.lastname) }}
                </div> 
            
                <div class="form-group col-sm-3 ">
                    {{ form_label(form.phone, label|default('Téléphone'|trans), { 'label_attr': { 'class': '' } }) }}
                </div>
                <div class="form-group col-sm-9 ">
                    <div class="input-group">
                        {{ form_widget(form.phone, {'attr' : {'class' : 'form-control', 'placeholder' : 'registration.phone'|trans}}) }}
                    </div>
                    {{ form_errors(form.phone) }}
                </div>
            
            
                <div class="form-group col-sm-3">
                    {{ form_label(form.fields, label|default('Vous êtes'|trans), { 'label_attr': { 'class': '' } }) }}
                </div>
                <div class="form-group col-sm-9">
                    {{ form_widget(form.user_category, {'attr' : {'class' : 'form-control'}}) }}
                    {{ form_errors(form.user_category) }}
                </div>
            

            
                <div class="form-group col-sm-3 ">
                    {{ form_label(form.fields, label|default('Spécialisé en'|trans), { 'label_attr': { 'class': '' } }) }}
                </div>
                <div class="form-group col-sm-9">
                    {{ form_widget(form.fields, {'attr' : {'class' : 'form-control'}}) }}
                    {{ form_errors(form.fields) }}
                </div>
            
            {#
                <div class="form-group col-sm-3">
                    {{ form_label(form.profil, label|default('Votre profile'|trans), { 'label_attr': { 'class': '' } }) }}
                </div>
                <div class="form-group col-sm-9">
                    {{ form_widget(form.profil, {'attr' : {'class' : 'form-control'}}) }}
                    {{ form_errors(form.profil) }}
                </div>
           
#}
            {% if(form.nomEntreprise is defined) %}

                <legend>{{ "registration.legend.3" | trans({}, 'FOSUserBundle') }}</legend>
                <div class="form-group col-sm-3">
                    {{ form_label(form.nomEntreprise, label|default('Nom Entreprise'|trans), { 'label_attr': { 'class': '' } }) }}
                </div>
                <div class="form-group col-sm-9">
                    {{ form_widget(form.nomEntreprise, {'attr' : {'class' : 'form-control', 'placeholder' : 'registration.nomEntreprise'|trans}}) }}
                    {{ form_errors(form.nomEntreprise) }}
                </div>
            {% endif %}

            {% if(form.adresse is defined) %}
                <div class="form-group col-sm-3">
                    {{ form_label(form.adresse, label|default('Adresse Entreprise'|trans), { 'label_attr': { 'class': '' } }) }}
                </div>
                <div class="form-group col-sm-9">
                    {{ form_widget(form.adresse, {'attr' : {'class' : 'form-control', 'placeholder' : 'registration.adresse'|trans}}) }}
                    {{ form_errors(form.adresse) }}
                </div>
            {% endif %}

            {% if(form.ifu is defined) %}
                <div class="form-group col-sm-3">
                    {{ form_label(form.ifu, label|default('N° Ifu'|trans), { 'label_attr': { 'class': '' } }) }}
                </div>
                <div class="form-group col-sm-9">
                    {{ form_widget(form.ifu, {'attr' : {'class' : 'form-control', 'placeholder' : 'registration.ifu'|trans}}) }}
                    {{ form_errors(form.ifu) }}
                </div>
            {% endif %}
            {{ form_rest(form) }}
        </fieldset>
    <button class="btn btn-primary btn-xs round-xl form-el-offset-1" type="submit">Modifier</button>
    {{ form_end(form) }}

{% endblock %}
