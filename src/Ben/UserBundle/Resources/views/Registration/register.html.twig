    </div>
    {# L'utilisateur est-il connecté ? #}
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        {# L'utilisateur e le rôle admin ? #}
        {% if is_granted('ROLE_ADMIN') %}

        {% endif %}
    {% endif %}

{% endblock fos_user_content %}

{% block javascripts %}
    {{ parent() }}
    <script>
        require(['user/Register']);
    </script>
{% endblock %}

