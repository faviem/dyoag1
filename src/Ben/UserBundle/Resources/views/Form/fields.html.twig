{% trans_default_domain 'FOSUserBundle' %}
{% block ben_user_registration_widget %}
    {% spaceless %}
        <fieldset>
            <legend>{{ "registration.legend.1" | trans }}</legend>

            {#{{ form_errors(form) }}   #}

            <div class="row">
                <div class="form-group col-sm-4">
                    {{ form_widget(form.username, {'attr' : {'class' : 'form-control', 'placeholder' : 'registration.name'|trans}}) }}
                    {{ form_errors(form.username) }}
                </div>

                <div class="form-group col-sm-5">
                    {{ form_widget(form.email, {'attr' : {'class' : 'form-control', 'placeholder' : 'registration.form_email'|trans}}) }}
                    {{ form_errors(form.email) }}
                </div>
                <div class="form-group col-sm-3">
                    {{ form_widget(form.plainPassword, {'attr' : {'class' : 'form-control', 'placeholder' : 'registration.password'|trans}}) }}
                    {{ form_errors(form.plainPassword) }}
                </div>
            </div>

            <legend>{{ "registration.legend.2" | trans }}</legend>
            <div class="row">
                <div class="form-group col-sm-6">
                    {{ form_widget(form.firstname, {'attr' : {'class' : 'form-control' , 'placeholder' : 'registration.firstname'|trans}}) }}
                    {{ form_errors(form.firstname) }}
                </div>
                <div class="form-group col-sm-6">
                    {{ form_widget(form.lastname, {'attr' : {'class' : 'form-control', 'placeholder' : 'registration.lastname'|trans}}) }}
                    {{ form_errors(form.lastname) }}
                </div>
            </div>
            <div class="row">
                <div class="form-group col-sm-3 ">
                    {{ form_label(form.phone, label|default('Téléphone'|trans), { 'label_attr': { 'class': '' } }) }}
                </div>
                <div class="form-group col-sm-9 ">
                    <div class="input-group">
                        {{ form_widget(form.phone, {'attr' : {'class' : 'form-control', 'placeholder' : 'registration.phone'|trans}}) }}
                    </div>
                    {{ form_errors(form.phone) }}
                </div>
            </div>


            <div class="row">
                <div class="form-group col-sm-3">
                    {{ form_label(form.fields, label|default('Vous êtes'|trans), { 'label_attr': { 'class': '' } }) }}
                </div>
                <div class="form-group col-sm-9">
                    {{ form_widget(form.user_category, {'attr' : {'class' : 'form-control'}}) }}
                    {{ form_errors(form.user_category) }}
                </div>
            </div>

            <div class="row">
                <div class="form-group col-sm-3 ">
                    {{ form_label(form.fields, label|default('Spécialisé en'|trans), { 'label_attr': { 'class': '' } }) }}
                </div>
                <div class="form-group col-sm-9">
                    {{ form_widget(form.fields, {'attr' : {'class' : 'form-control'}}) }}
                    {{ form_errors(form.fields) }}
                </div>
            </div>
            <div class="row">
                <div class="form-group col-sm-3">
                    {{ form_label(form.profil, label|default('Votre profile'|trans), { 'label_attr': { 'class': '' } }) }}
                </div>
                <div class="form-group col-sm-9">
                    {{ form_widget(form.profil, {'attr' : {'class' : 'form-control'}}) }}
                    {{ form_errors(form.profil) }}
                </div>
            </div>

            {% if(form.nomEntreprise is defined) %}

                <legend>{{ "registration.legend.3" | trans }}</legend>

                <div class="form-group">

                    {{ form_widget(form.nomEntreprise, {'attr' : {'class' : 'form-control', 'placeholder' : 'registration.nomEntreprise'|trans}}) }}
                    {{ form_errors(form.nomEntreprise) }}
                </div>
            {% endif %}

            {% if(form.adresse is defined) %}
                <div class="form-group">
                    {{ form_widget(form.adresse, {'attr' : {'class' : 'form-control', 'placeholder' : 'registration.adresse'|trans}}) }}
                    {{ form_errors(form.adresse) }}
                </div>
            {% endif %}

            {% if(form.ifu is defined) %}
                <div class="form-group">

                    {{ form_widget(form.ifu, {'attr' : {'class' : 'form-control', 'placeholder' : 'registration.ifu'|trans}}) }}
                    {{ form_errors(form.ifu) }}
                </div>
            {% endif %}
            {{ form_rest(form) }}
        </fieldset>
    {% endspaceless %}
{% endblock %}
